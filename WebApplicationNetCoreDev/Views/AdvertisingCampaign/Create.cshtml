@Html.Script(
@<script type="text/javascript">
     $(function () {
         $("input[name='PricePerClick']").each(function (i, element) {
             $(element).change(function () {
                 var value = parseFloat($(this).val().replace(",", "."));
                 if (value < 0 || !value) {
                     value = 0;
                 }
                 $(this).val(value.toFixed(4).replace(".", ","));
             });
         });
         $("input[name='NumberOfClicks']").each(function (i, element) {
             $(element).change(function () {
                 var value = parseInt($(this).val().replace(",", "."));
                 if (value < 0 || !value) {
                     value = 0;
                 }
                 $(this).val(value.toFixed(0).replace(".", ","));
             });
         });
     });
</script>)
