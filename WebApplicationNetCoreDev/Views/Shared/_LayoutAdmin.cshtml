@using WebApplicationNetCoreDev.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplicationNetCoreDev</title>

    @if (System.IO.File.Exists("wwwroot/vendor/dist/default-styles.html"))
    {
        @Html.Raw(System.IO.File.ReadAllText("wwwroot/vendor/dist/default-styles.html"));
    }

    @RenderSection("Css", required: false)

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    @if (System.IO.File.Exists("wwwroot/vendor/dist/default-scripts.html"))
    {
        @Html.Raw(System.IO.File.ReadAllText("wwwroot/vendor/dist/default-scripts.html"));
    }
</head>
<body class="skin-blue fixed-layout lock-nav">
    @if (!User.Identity.IsAuthenticated)
    {
        IgnoreBody();
        @await Html.PartialAsync("~/Views/Authentication/_Index.cshtml")
    }
else
{ <!--Preloader-->
                @await Html.PartialAsync("Elegant/Admin/_Preloader.cshtml") <!--Preloader--> <!--Main wrapper - style you can find in pages.scss-->
                                <div id="main-wrapper">
                                    <!--Topbar header - style you can find in pages.scss-->
                                    <header class="topbar">
                                        <nav class="navbar top-navbar navbar-expand-md navbar-dark">
                                            <!--Logo-->
                                            @await Html.PartialAsync("Elegant/Admin/_Logo.cshtml")
                                            <!--/Logo-->
                                            <!--Navbar Collapse-->
                                            @await Html.PartialAsync("Elegant/Admin/_NavbarCollapse.cshtml")
                                            <!--End Navbar Collapse-->
                                        </nav>
                                    </header>
                                    <!--End Topbar header-->
                                    <!--Left Sidebar - style you can find in sidebar.scss-->
                                    @await Html.PartialAsync("Elegant/Admin/_LeftSidebar.cshtml")
                                    <!--End Left Sidebar - style you can find in sidebar.scs-->s
                                    <!--Page wrapper-->
                                    <div class="page-wrapper">
                                        <!--Container fluid-->
                                        <div class="container-fluid">
                                            @RenderBody()
                                            <!--Right sidebar-->
                                            @await Html.PartialAsync("Elegant/Admin/_RightSidebar.cshtml")
                                            <!--End Right sidebar-->
                                        </div>
                                        <!--End Container fluid-->
                                    </div>
                                    <!--End Page wrapper-->
                                    <!--Footer-->
                                    @await Html.PartialAsync("Elegant/Admin/_Footer.cshtml")
                                    <!--End Footer-->
                                </div>}
    @RenderSection("Scripts", required: false)
    <script type="text/javascript" src="/js/site.js"></script>
    @Html.RenderScripts()
</body>
</html>